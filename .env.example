# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_RAW=iot-raw-data
KAFKA_TOPIC_PROCESSED=iot-processed-data
KAFKA_GROUP_ID=iot-consumer-group

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=your-org
INFLUXDB_BUCKET=iot_data

# Application Settings
LOG_LEVEL=INFO
BATCH_INTERVAL_SECONDS=60
ANOMALY_THRESHOLD=3.0  # Standard deviations from mean

# Device Simulation Settings
NUM_DEVICES=5
SENSOR_TYPES=temperature,humidity,heart_rate
UPDATE_INTERVAL_MS=1000
